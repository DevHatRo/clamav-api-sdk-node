{
  "name": "@devhatro/clamav-api-sdk",
  "version": "0.1.0",
  "description": "Production-ready Node.js SDK for ClamAV API â€” REST and gRPC clients for antivirus scanning",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "proto"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/ test/ && prettier --check src/ test/",
    "lint:fix": "eslint --fix src/ test/ && prettier --write src/ test/",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:coverage": "vitest run --project unit --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "clamav",
    "antivirus",
    "virus-scanner",
    "malware",
    "security",
    "grpc",
    "rest",
    "sdk"
  ],
  "author": "DevHat",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/DevHatRo/clamav-api-sdk.git"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.5",
    "@grpc/proto-loader": "^0.7.13"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.5.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
